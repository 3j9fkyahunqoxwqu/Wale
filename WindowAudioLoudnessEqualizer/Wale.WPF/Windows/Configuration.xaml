<Window x:Class="Wale.WPF.Configuration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:Wale.WPF"
        xmlns:prop="clr-namespace:Wale.WPF.Properties"
        xmlns:wale="clr-namespace:Wale;assembly=WaleBase"
        mc:Ignorable="d"
        Title="Wale"
        Height="410"
        Width="{Binding Source={x:Static wale:AppDatas.MainWindowWidth}}" MinWidth="{Binding Width, Source=self}" MaxWidth="{Binding Width, Source=self}"
        ResizeMode="NoResize" WindowStyle="None"
        Background="{Binding Source={x:Static local:ColorSet.BackColorBrush}}" Foreground="{Binding Source={x:Static local:ColorSet.ForeColorBrush}}"
        Topmost="{Binding Path=AlwaysTop, Source={x:Static prop:Settings.Default}}"
        LocationChanged="Window_LocationAndSizeChanged">
        <!--PreviewKeyDown="Window_PreviewKeyDown"-->
    <Grid x:Name="MainGrid">
        <local:TitleBar/>
        <local:ConfigSet Margin="0,35,0,0"/>
    </Grid>
</Window>
